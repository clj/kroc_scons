#IF NOT DEFINED (BITOPS.OCC)
#DEFINE BITOPS.OCC

-- rs
-- register set
-- Takes the address of a location in memory
-- and sets it.
PROC rs(VAL INT addr, VAL BYTE value)
  [1]BYTE reg:
  PLACE reg AT addr:
  SEQ
    reg[0] := value
:

-- rv
-- register value
-- Takes an address, and returns the value at that address.
BYTE FUNCTION rv (VAL INT addr)
  [1]BYTE reg:
  PLACE reg AT addr:
  BYTE res:
  VALOF
    SEQ
      res := reg[0]
    RESULT res 
:


#ENDIF -- BITOPS.OCC

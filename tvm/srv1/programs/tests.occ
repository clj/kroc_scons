#INCLUDE "srv1.inc"
#INCLUDE "delay.inc"
#INCLUDE "out.occ"

PROC test.lasers(LASER! l)
  SEQ
    l[req] ! left; TRUE
    delay.s(2)
    l[req] ! right; TRUE
    delay.s(2)
    l[req] ! left; FALSE
    delay.s(2)
    l[req] ! right; FALSE
    delay.s(2)
    l[req] ! all; TRUE
    delay.s(2)
    l[req] ! all; FALSE
:


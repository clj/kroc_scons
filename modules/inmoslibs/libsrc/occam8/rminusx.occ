#PRAGMA TRANSLATE MINUSX "MINUSX%O"

--{{{  
REAL32 FUNCTION MINUSX (VAL REAL32 Y)

  -- Function version (10 Jun 87)
  -- V1.1, 21-Feb-89

  REAL32 X :
  VALOF
    [2]INT X RETYPES X:
    VAL [2]INT Y RETYPES Y:
    SEQ
      X[0] := Y[0]
      X[1] := Y[1] >< (MOSTNEG INT)
    RESULT X
:
--}}}


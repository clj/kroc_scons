#PRAGMA TRANSLATE COPYSIGN "COPYSIGN%O"

--{{{  COPYSIGN
REAL32 FUNCTION COPYSIGN (VAL REAL32 Y, Z)

  --{{{  history
  -- V1.1, 21-Feb-89
  -- Amalgamated T2, TA and T8 code; V1.2, 7-Apr-90 SRH
  --}}}

  REAL32 X :
  VALOF
    INT32 X RETYPES X:
    VAL INT32 Y RETYPES Y:
    VAL INT32 Z RETYPES Z:
    X := (Z /\ ( MOSTNEG INT32 )) \/ (Y /\ (~( MOSTNEG INT32 )))
    RESULT X
:
--}}}

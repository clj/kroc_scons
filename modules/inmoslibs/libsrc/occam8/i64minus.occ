--}}}

#PRAGMA TRANSLATE INT64MINUS "INT64MINUS%CHK"

--{{{  T2
INT64 FUNCTION INT64MINUS (VAL INT64 A, B)

  -- Function version (10 Jun 87)

  INT64 Diff :
  VALOF
    [4]INT Res RETYPES Diff :
    VAL [4]INT A RETYPES A :
    VAL [4]INT B RETYPES B :
    INT Borrow :
    SEQ
      Borrow,  Res[0] := LONGDIFF ( A[0],  B[0],  0)
      Borrow,  Res[1] := LONGDIFF ( A[1],  B[1],  Borrow)
      Borrow,  Res[2] := LONGDIFF ( A[2],  B[2],  Borrow)
      Borrow,  Res[3] := LONGDIFF ( A[3],  B[3],  Borrow)
    RESULT Diff
:
--}}}

#ENDIF
